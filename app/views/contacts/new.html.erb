<% content_for :title do %>Contact<% end %>
<h3>Contact</h3>
<div class="large-6">
<%= simple_form_for @contact do |form| %><!-- @contact is an instance variable that stores the contact model and is used as an argument.-->
<%= form.error_notification %>
<%= form.input :name, autofocus: true %>
<%= form.input :email %>
<%= form.input :content, as: :text %>
<%= form.button :submit, 'Submit', class: 'button radius' %>
<% end %>
</div>
